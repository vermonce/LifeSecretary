<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#856363"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:text="111111111111"
        android:id="@+id/tv_title_todayitems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:id="@+id/iv_pic_item"
        android:layout_width="80dp"
        android:layout_height="80dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#856363"
                    android:textSize="13sp"
                    android:text="历史年份："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#856363"
                    android:id="@+id/tv_happenyear"
                    android:layout_marginLeft="6dp"
                    android:textSize="13sp"
                    android:text="1912"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#856363"
                    android:textSize="13sp"
                    android:text="农历时间："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#856363"
                    android:id="@+id/tv_nongli"
                    android:layout_marginLeft="6dp"
                    android:textSize="13sp"
                    android:text="1912"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#856363"
                    android:textSize="13sp"
                    android:text="大纲纪要："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#856363"
                    android:id="@+id/tv_dagang"
                    android:layout_marginLeft="6dp"
                    android:textSize="13sp"
                    android:text="1912111111111111111111111111111111"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>





            </LinearLayout>


    </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="#856363"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

</LinearLayout>