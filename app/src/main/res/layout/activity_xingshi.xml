<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:gravity="center"
        android:background="@drawable/assistant_bg_shape"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:text="强势围观一下自己的姓的来源吧！"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/baijiaxing"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="10sp"
                android:hint="输入自己的姓，复姓也可以哟，英文可不行"
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#856363"
                    android:layout_marginLeft="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右侧点击搜索---->"/>

                <ImageButton
                    android:background="@drawable/search_selector"
                    android:id="@+id/ib_search"
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#856363"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="查找的姓:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:id="@+id/tv_xingshi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="姓氏起源:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        </LinearLayout>

    <ScrollView
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="3dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:textSize="13sp"
            android:id="@+id/tv_xingshi_orgin"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        </ScrollView>



</LinearLayout>
